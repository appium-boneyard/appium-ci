{
  "name": "appium-ci",
  "description": "Appium CI utils",
  "keywords": [
    "appium"
  ],
  "version": "0.2.0",
  "author": "appium",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/appium/appium-ci.git"
  },
  "bugs": {
    "url": "https://github.com/appium/appium-ci/issues"
  },
  "engines": [
    "node"
  ],
  "main": "./build/index.js",
  "bin": {
    "appium_ci_setup": "./setup"
  },
  "directories": {
    "lib": "lib"
  },
  "files": [
    "build/index.js",
    "build/lib",
    "index.js",
    "lib",
    "setup",
    "setup.ps1"
  ],
  "dependencies": {
    "appium-support": "^2.5.0",
    "babel-runtime": "=5.8.24",
    "bluebird": "^3.5.2",
    "lodash": "^4.17.10",
    "source-map-support": "^0.5.5",
    "split": "^1.0.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm install",
    "build": "gulp transpile",
    "mocha": "mocha",
    "prepublish": "gulp prepublish",
    "test": "gulp once",
    "e2e-test": "gulp e2e-test",
    "watch": "gulp watch",
    "coverage": "gulp coveralls",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "precommit-test": "REPORTER=dot gulp once",
    "lint": "gulp eslint",
    "lint:fix": "gulp eslint --fix"
  },
  "pre-commit": [
    "precommit-msg",
    "precommit-test"
  ],
  "devDependencies": {
    "appium-gulp-plugins": "^2.2.2",
    "babel-eslint": "^7.1.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^3.18.0",
    "eslint-config-appium": "^2.0.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-promise": "^3.3.1",
    "gulp": "^3.8.11",
    "pre-commit": "^1.2.2",
    "sinon": "^6.3.4",
    "yargs": "^12.0.2"
  },
  "greenkeeper": {
    "ignore": [
      "babel-eslint",
      "eslint",
      "eslint-plugin-babel",
      "eslint-plugin-import",
      "eslint-plugin-mocha",
      "eslint-plugin-promise",
      "gulp",
      "babel-runtime"
    ]
  }
}
