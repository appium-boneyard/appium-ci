{
  "name": "appium-ci",
  "description": "Appium CI utils",
  "keywords": [
    "appium"
  ],
  "version": "0.3.1",
  "author": "appium",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/appium/appium-ci.git"
  },
  "bugs": {
    "url": "https://github.com/appium/appium-ci/issues"
  },
  "engines": [
    "node"
  ],
  "main": "./build/index.js",
  "bin": {
    "appium_ci_setup": "./setup"
  },
  "directories": {
    "lib": "lib"
  },
  "files": [
    "build/index.js",
    "build/lib",
    "index.js",
    "lib",
    "setup",
    "setup.ps1"
  ],
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "appium-support": "^2.5.0",
    "bluebird": "^3.5.2",
    "lodash": "^4.17.10",
    "source-map-support": "^0.5.5",
    "split": "^1.0.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules && rm -f package-lock.json && npm install",
    "build": "gulp transpile",
    "mocha": "mocha",
    "prepare": "gulp prepublish",
    "test": "gulp once",
    "e2e-test": "gulp e2e-test",
    "watch": "gulp watch",
    "coverage": "gulp coveralls",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "precommit-test": "REPORTER=dot gulp once",
    "lint": "gulp lint",
    "lint:fix": "gulp eslint --fix"
  },
  "pre-commit": [
    "precommit-msg",
    "precommit-test"
  ],
  "devDependencies": {
    "ajv": "^6.5.3",
    "appium-gulp-plugins": "^5.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint-config-appium": "^4.0.1",
    "gulp": "^4.0.0",
    "pre-commit": "^1.2.2",
    "sinon": "^8.0.0",
    "yargs": "^15.0.1"
  },
  "greenkeeper": {
    "ignore": []
  }
